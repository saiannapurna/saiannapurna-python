##leap year way3
def leap_year(n):
    if(n%4==0 and n%100!=0):
        return(True)
    elif(n%400==0):
        return(True)
    else:
        return(False)
n=int(input("enter the year : "))
if(leap_year(n)):
    print("It is a leap year")
else:
    print("It ia not a leap year")

